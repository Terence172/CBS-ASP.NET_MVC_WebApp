@model Assignment_3_ASP.NET_MVC_CRUD.Models.tb_user

@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title">
    
    <h2 id="title">@ViewBag.Title.</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <br />

    <div class="row">
        @Html.LabelFor(model => model.u_name, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.u_name, new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(model => model.u_address, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.u_address, new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(model => model.u_phone, new { @class = "col-md-2 col-form-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.u_phone, new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(model => model.u_pass, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.u_pass, new { @class = "form-control" })
        </div>
    </div>

    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Register" class="btn btn-default" />
        </div>
    </div>
</div>
    }


</main>

<br />

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
